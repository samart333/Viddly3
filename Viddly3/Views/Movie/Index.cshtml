@model List<Viddly3.Models.Movie>
@{
    ViewBag.Title = "Index";
}

<h1>Movies</h1>

<a href="@Url.Action("New", "Movie")" class="btn btn-primary">New Movie</a>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Movie</th>
            <th scope="col">Genre</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var movie in Model)
        {

            <tr>
                <td><a href="@Url.Action("Edit", "Movie", new {id= movie.Id})">@movie.Name</a></td>
                <td>@movie.Genre.Type</td>  
                
            </tr>
        }

    </tbody>
</table>

